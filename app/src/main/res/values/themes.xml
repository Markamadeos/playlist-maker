<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PlaylistMaker" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="settings_text_color">@color/black</item>
        <item name="btn_text_color">@color/black</item>
        <item name="btn_tint_color">@color/white</item>
        <item name="title_text_color_main">@color/white</item>
        <item name="title_text_color">@color/black</item>
        <item name="background_color">@color/yp_blue</item>
        <item name="et_background_color">@color/yp_light_gray</item>
        <item name="hint_color">@color/yp_text_gray</item>
        <item name="drawable_tint_color">@color/yp_text_gray</item>
        <item name="icon_color">@color/black</item>
    </style>
</resources>