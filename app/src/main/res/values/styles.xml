<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MainButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">3</item>
        <item name="backgroundTint">?attr/btn_tint_color</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:letterSpacing">0</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">?attr/btn_text_color</item>
        <item name="android:textSize">@dimen/btn_text_size</item>
        <item name="cornerRadius">@dimen/btn_corner_radius</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/btn_icon_padding</item>
        <item name="iconSize">@dimen/btn_text_size</item>
        <item name="iconTint">?attr/icon_color</item>
    </style>

    <style name="TitleTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textColor">?attr/title_text_color</item>
        <item name="android:textSize">@dimen/btn_text_size</item>
    </style>

    <style name="SettingsTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/settings_margin</item>
        <item name="android:layout_marginTop">@dimen/settings_margin</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textColor">?attr/settings_text_color</item>
        <item name="android:textSize">@dimen/settings_text_size</item>
        <item name="drawableTint">?attr/drawable_tint_color</item>
    </style>

</resources>