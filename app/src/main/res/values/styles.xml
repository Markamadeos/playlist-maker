<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MainButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">3</item>
        <item name="backgroundTint">?attr/btn_tint_color</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:letterSpacing">0</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">?attr/btn_text_color</item>
        <item name="android:textSize">@dimen/_26sp</item>
        <item name="cornerRadius">@dimen/_16dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/_10dp</item>
        <item name="iconSize">@dimen/_26sp</item>
        <item name="iconTint">?attr/icon_color</item>
    </style>

    <style name="TitleTextStyle">
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textSize">@dimen/_22sp</item>
        <item name="android:textColor">?attr/title_text_color</item>
    </style>

    <style name="SettingsTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/_21dp</item>
        <item name="android:layout_marginTop">@dimen/_21dp</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textColor">?attr/settings_text_color</item>
        <item name="android:textSize">@dimen/_16sp</item>
        <item name="drawableTint">?attr/drawable_tint_color</item>
    </style>

    <style name="TrackNameTextStyle">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textColor">?attr/track_name_color</item>
        <item name="android:textSize">@dimen/_16sp</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="ArtistTextStyle">
        <item name="android:textColor">?attr/artist_name_color</item>
        <item name="android:textSize">@dimen/_11sp</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="AlbumCoverStyle">
        <item name="android:layout_width">@dimen/_45dp</item>
        <item name="android:layout_height">@dimen/_45dp</item>
        <item name="android:layout_marginEnd">@dimen/_8dp</item>
    </style>

    <style name="ActionButtonStyle">
        <item name="android:layout_gravity">center</item>
        <item name="android:backgroundTint">?attr/refresh_button_tint_color</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:gravity">center</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/refresh_button_text_color</item>
        <item name="cornerRadius">54dp</item>
    </style>

    <style name="PlaceholderTextStyle">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="TabStyle">
        <item name="tabIndicatorColor">?attr/title_text_color</item>
        <item name="tabTextColor">?attr/title_text_color</item>
        <item name="android:background">?attr/background_color</item>
    </style>

    <style name="TabLayoutTextStyle">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/_14sp</item>
    </style>

    <style name="BottomNavStyle">
        <item name="android:textSize">@dimen/_12sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:letterSpacing">0</item>
    </style>

</resources>