<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MainButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">3</item>
        <item name="backgroundTint">?attr/btn_tint_color</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:letterSpacing">0</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">?attr/btn_text_color</item>
        <item name="android:textSize">@dimen/btn_text_size</item>
        <item name="cornerRadius">@dimen/btn_corner_radius</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/btn_icon_padding</item>
        <item name="iconSize">@dimen/btn_text_size</item>
        <item name="iconTint">?attr/icon_color</item>
    </style>

    <style name="TitleTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textColor">?attr/title_text_color</item>
    </style>

    <style name="SettingsTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/settings_margin</item>
        <item name="android:layout_marginTop">@dimen/settings_margin</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textColor">?attr/settings_text_color</item>
        <item name="android:textSize">@dimen/settings_text_size</item>
        <item name="drawableTint">?attr/drawable_tint_color</item>
    </style>

    <style name="TrackNameTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textColor">?attr/track_name_color</item>
        <item name="android:textSize">@dimen/track_name_text_size</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_marginTop">@dimen/artist_name_text_margin_14dp</item>
        <item name="android:layout_marginBottom">@dimen/artist_name_text_margin_1dp</item>
    </style>

    <style name="ArtistTextStyle">
        <item name="android:textColor">?attr/artist_name_color</item>
        <item name="android:textSize">@dimen/artist_name_text_size</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:drawablePadding">@dimen/track_time_margin_5dp</item>
    </style>

    <style name="AlbumCoverStyle">
        <item name="android:layout_width">@dimen/img_size_45dp</item>
        <item name="android:layout_height">@dimen/img_size_45dp</item>
        <item name="android:layout_marginEnd">@dimen/img_margin_8dp</item>
    </style>

    <style name="ActionButtonStyle">
        <item name="android:layout_gravity">center</item>
        <item name="android:backgroundTint">?attr/refresh_button_tint_color</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:gravity">center</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/refresh_button_text_color</item>
        <item name="cornerRadius">54dp</item>
    </style>


    <style name="PlaceholderTextStyle">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">19sp</item>
    </style>

</resources>