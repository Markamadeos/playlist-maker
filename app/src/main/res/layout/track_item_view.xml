<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_cover"
        style="@style/AlbumCoverStyle"
        tools:src="@drawable/album_placeholder" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_track_name"
            style="@style/TrackNameTextStyle"
            tools:text="Yesterday (Remastered 2009)" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_artist_name"
                style="@style/ArtistTextStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                tools:text="The Beatles" />

            <ImageView
                android:layout_width="@dimen/circle_artist_size"
                android:layout_height="@dimen/circle_artist_size"
                android:layout_gravity="center_vertical"
                android:layout_marginHorizontal="@dimen/track_time_margin_5dp"
                android:src="@drawable/baseline_circle_24"
                app:tint="?attr/drawable_tint_color" />

            <TextView
                android:id="@+id/tv_track_time"
                style="@style/ArtistTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="3:46" />

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginEnd="4dp"
        android:src="@drawable/ic_track_item_arrow"
        app:tint="?attr/arrow_track_item_color" />

</LinearLayout>